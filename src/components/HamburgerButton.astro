<button
  @click="isOpen = !isOpen"
  class="fixed top-4 right-4 z-50 p-2 rounded-lg bg-white bg-opacity-20 hover:bg-opacity-30 transition-colors"
  aria-label="Toggle Menu"
>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="h-6 w-6 text-white"
    fill="none" 
    viewBox="0 0 24 24" 
    stroke="currentColor"
  >
    <path 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      stroke-width="2" 
      d="M4 6h16M4 12h16M4 18h16"
      x-show="!isOpen"
    />
    <path 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      stroke-width="2" 
      d="M6 18L18 6M6 6l12 12"
      x-show="isOpen"
    />
  </svg>
</button>