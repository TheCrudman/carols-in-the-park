---
interface Props {
  title: string;
  id: string;
}

const { title, id } = Astro.props;
---

<a 
  href={`/carols/${id}`}
  class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow cursor-pointer block bg-opacity-100"
>
  <h3 class="text-xl font-semibold text-holiday-green mb-2">{title}</h3>
  <p class="text-gray-600">Click to view lyrics</p>
</a>