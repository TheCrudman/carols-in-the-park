<section
  class="relative py-16 px-8 my-8 text-center text-white overflow-hidden rounded-lg"
>
  <!-- Background with gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-cyan-900 to-slate-900">
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Content -->
  <div class="relative max-w-3xl mx-auto space-y-6">
    <h2 class="text-4xl md:text-5xl tracking-wider font-bold">
      SHORE BAPTIST CHURCH
    </h2>

    <div class="tracking-[0.2em] text-lg">WISHES YOU A VERY</div>

    <div
      class="text-5xl md:text-7xl font-['Dancing_Script'] text-yellow-400 font-bold drop-shadow-lg"
    >
      Merry Christmas
    </div>

    <p class="text-lg md:text-xl leading-relaxed mt-6">
      and we'd like to extend a heartfelt invitation<br />
      to you and your family to our <span class="text-yellow-400"
        >Christmas Day Service</span
      >
    </p>

    <div class="text-2xl md:text-3xl mt-6">
      9:30am, 25 December 2024<br />

      <span class="text-yellow-400 text-lg"
        >Westminster Christian School<br />31 Westminster Gardens, Unsworth
        Heights, Auckland 0632</span
      >
    </div>
  </div>
</section>
